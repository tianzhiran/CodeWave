@model FlixNow.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        position: relative;
        min-height: 100vh;
        background: transparent; /* 图片主色调的深色，可换成 transparent */
    }

        body::before {
            content: '';
            position: fixed;
            inset: 0;
            z-index: -1;
            background: url('/images/MovieTheater4.jpg') center center/cover no-repeat;
            opacity: 0.40;
            pointer-events: none;
            /* backdrop-filter: blur(2px);  // 如果需要模糊效果可以打开 */
        }

    .table-responsive {
        background: transparent;
        border-radius: 14px;
        box-shadow: 0 8px 36px #0006;
        padding: 16px;
    }
</style>

<h1 class="text-center mb-4" style="color:#26e0ae; letter-spacing:2px;">Create Movie</h1>
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-lg border-0" style="background:rgba(30,30,30,0.98);">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label" style="color:#1b6ec2;"></label>
                        <input asp-for="Title" class="form-control bg-dark text-white border-0" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label" style="color:#1b6ec2;"></label>
                        <input asp-for="Description" class="form-control bg-dark text-white border-0" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PosterUrl" class="control-label" style="color:#1b6ec2;"></label>
                        <input asp-for="PosterUrl" class="form-control bg-dark text-white border-0" />
                        <span asp-validation-for="PosterUrl" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Genre" class="control-label" style="color:#1b6ec2;"></label>
                        <input asp-for="Genre" class="form-control bg-dark text-white border-0" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Rating" class="control-label" style="color:#1b6ec2;"></label>
                        <input asp-for="Rating" class="form-control bg-dark text-white border-0" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid">
                        <input type="submit" value="Create" class="btn btn-success btn-lg fw-bold" />
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" class="text-decoration-none" style="color:#26e0ae;">&#8592; Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
